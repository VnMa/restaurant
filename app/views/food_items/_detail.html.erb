<% if @curr_food_item %>
    <div class="card text-right">
    <div class="card-photo">
      <div class="card-img">
        <img src="<%=  @curr_food_item.get_image_url%>" class="img-fluid" alt="Responsive image">
      </div>
      <div class="card-block">
        <div class="food-description">
          <%= @curr_food_item.description %></div>

        <div class="rating">
          <div class="stars">
            <span class="full"></span>
            <span class="full"></span>
            <span class="full"></span>
            <span class="half"></span>
            <span class="empty"></span>
          </div>
          <a href="#" target="_blank" title="Review mon an dc chon" rel="nofollow">
            <p class="number-review">
              6.8 / 181 bình luận trên Ba sach
            </p>
          </a>
        </div>


        <div class="pull-right">

          <%= form_for [@order, @order_item], remote: true, :authenticity_token => true do |o| %>
              <div class="input-group">
                <div class="input-group-btn">
                  <%= o.hidden_field :food_item_id, value: @curr_food_item.id %>
                  <%= o.hidden_field :quantity, value: 1 %>
                  <%= button_tag :submit, :class => 'add-to-cart' do %>
                      Add to cart
                  <% end %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>

<% end %>