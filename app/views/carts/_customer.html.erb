<%= form_for [@order, @order.curr_customer], method: :post do |customer| %>


<div>
	<ul class="list-group list-group-flush">

		<li class="list-group-item">

			<div class="field">
				<%= customer.label :name %><br>
				<%= customer.text_field :name %>
			</div>
		</li>
		<li class="list-group-item">

			<div class="field">
				<%= label_tag :address %><br>
				<%= text_area_tag :address %>
			</div>
		</li>
		<li class="list-group-item">

			<div class="field">
				<%= label_tag :phone_number %><br>
				<%= text_field_tag :phone_number %>
			</div>
		</li>

		<li class="list-group-item">

			<div class="field">
				<%= label_tag :email %><br>
				<%= text_field_tag :email %>
			</div>
		</li>
	</ul>
</div>
<% end %>