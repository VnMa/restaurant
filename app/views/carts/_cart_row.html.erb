<div class="">
  <%= form_for order, method: :patch do |f| %>
  <div class="row">
    <div class="col-xs-8">
      <table class="table table-striped table-bordered" >
        <thead>
          <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% order.order_items.each do |i| %>            

          <tr>  
            <td><%= i.food_item.name %></td>
            <td><%= number_field(i, :quantity, in: 1..20, step: 1, class: 'cart_quantity', value: i.quantity) %> </td>
            <td><%= toCurrency(i.unit_price) %></td>
            <td><%= toCurrency(i.total_price) %></td>,
            <td><%= link_to 'X', order_order_item_path(order, i),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              remote: true %>
            </td>
          </tr>
          <% end %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td> <i>Coupon</i> </td>
            <td><b>XYZ</b></td>
          </tr>
          <tr>
            <td></td>
            <td></td> 
            <td></td>
            <td>  <%= toCurrency(current_order.subtotal) %></td>
            <td><%= f.submit 'Check out', class: 'btn btn-primary' %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-xs-4">
      <!-- Customer info-->

      <%= render 'carts/customer', order: order, customer: order.curr_customer%>

    </div>

  </div>
  <% end %>
</div>