<!DOCTYPE html>
<html>
<head>
	<title>Banh canh ghe Ba Sach</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

	<div class="container">	
		<div class="navbar navbar-light bg-faded">
			<%= link_to "Ba Sach", root_path, class: "navbar-brand" %>
			<ul class="nav navbar-nav">
				<li class="nav-item active">
					<%= link_to "Menu", menu_path, class: "nav-link" %>
				</li>
				<li class="nav-item">
					<%= link_to "Contact us", contact_us_path, class: "nav-link" %>
				</li>
			</ul>

			<div class="form-inline pull-xs-right">
				<h1 class="cart-text"><%= render 'layouts/cart_text' %></h1>
			</div>
		</div>
		<hr>
		<%= yield %>
	</div>
</body>
</html>
