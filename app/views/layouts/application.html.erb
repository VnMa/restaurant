<!DOCTYPE html>
<html>
<head>
	<title>Banh canh ghe Ba Sach</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

	<div class="container">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "Ba Sach", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Menu", menu_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact us", contact_us_path, class: "nav-link" %>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <h1 class="cart-text"><%= render 'layouts/cart_text' %></h1>
        </form>
      </div>
    </nav>
		<hr>
		<%= yield %>
	</div>
</body>
</html>
